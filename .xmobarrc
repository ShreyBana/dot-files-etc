Config
  { overrideRedirect = False
  , font     = "Iosevka NFP Bold 11"
  , additionalFonts = [ "JetBrainsMono NF Bold 10"
                      , "JetBrainsMono NF 16"
                      ]
  , bgColor  = "#202325"
  , fgColor  = "#a9a9a9"
  , position = TopH 25
  , commands = [ Run Weather "EGPF"
                   [ "--template", "<weather> <tempC>°C"
                   , "-L", "0"
                   , "-H", "25"
                   , "--low"   , "lightblue"
                   , "--normal", "#9db9b9"
                   , "--high"  , "red"
                   ] 36000
               , Run Network "wlp5s0"
                 [ "--template" , "U:<tx>kB/s D:<rx>kB/s"
                 , "--Low"      , "1000"       -- units: B/s
                 , "--High"     , "20971520"   -- units: B/s
                 , "--low"      , "#a9a9a9"
                 , "--high"     , "darkred"
                 ] 10
               , Run Wireless "wlp5s0"
                 [ "-t", "<fn=1>󰀂</fn> :<essid>"
                 ] 10
               , Run Com "sh" ["-c", "hostname -i | awk '{ print $1 }'"] "ip" 10
               , Run Battery
                 [ "--template" , "<acstatus>"
                 , "--Low"      , "10"
                 , "--High"     , "80"
                 , "--low"      , "#cc241d"
                 , "--"
                           , "-o"	, "<fn=1>󱟞</fn> <left>%"
                           , "-O"	, "<fn=1><fc=#dAA520>󰂄</fc></fn> <left>%"
                 ] 10
               , Run Cpu
                   [ "-L", "3"
                   , "-H", "50"
                   , "--high"  , "#cc241d"
                   , "--template", "<fn=1><fc=#5b6366>CPU:</fc></fn> <total>%"
                   ] 10
               , Run DiskU [("/", "<fn=1><fc=#5b6366>Disk /:</fc></fn> <used>")] [] 20
               , Run Memory ["-t", "<fn=1><fc=#5b6366>Mem:</fc></fn> <usedratio>%"] 10
               , Run Swap ["-t", "<fn=1>󰾴</fn> <usedratio>%"] 10
               , Run Date "󰃶 %a, %d-%m-%Y 󱑂 %H:%M:%S" "date" 10
               , Run Volume "default" "Master" [ "-t", "<fn=1><fc=#5b6366>Vol:</fc></fn> <volume>%" ] 10
               , Run Com "sh" ["-c","/home/shrey_bana/.local/bin/spotify.sh"] "music" 10
               , Run XMonadLog
               ]
  , sepChar  = "%"
  , alignSep = "}{"
  , template = " <fn=1><fc=#5b6366>%wlp5s0wi%@%ip%</fc></fn> %wlp5s0% || <fn=1>%music%</fn> }%XMonadLog%{ %default:Master% | %disku% | %cpu% | %memory% =<< %date% "
  }

