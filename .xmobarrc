Config
  { overrideRedirect = False
  , font     = "JetBrainsMono Nerd Font Bold 9.5"
  , additionalFonts = ["JetBrainsMono Nerd Font Medium 12", "JetBrainsMono Nerd Font 18"]
  , bgColor  = "#2d302b"
  , fgColor  = "#679191"
  , position = TopSize C 100 23
  , alpha = 200
  , commands = [ Run Weather "EGPF"
                   [ "--template", "<weather> <tempC>°C"
                   , "-L", "0"
                   , "-H", "25"
                   , "--low"   , "lightblue"
                   , "--normal", "#9db9b9"
                   , "--high"  , "red"
                   ] 36000
               , Run Network "wlp3s0"
                 [ "--template" , "U:<tx>kB/s D:<rx>kB/s"
                 , "--Low"      , "1000"       -- units: B/s
                 , "--High"     , "20971520"       -- units: B/s
                 , "--low"      , "#dAA520"
                 , "--high"     , "darkred"
                 ] 10
               , Run Wireless "wlp3s0"
                 [ "-t", "<fn=1>󰀂</fn>  <essid>"
                 ] 10
               , Run Com "sh" ["-c", "hostname -i | awk '{ print $1 }'"] "ip" 10
               , Run Battery
                 [ "--template" , "<acstatus>"
                 , "--Low"      , "10"
                 , "--High"     , "80"
                 , "--low"      , "#cc241d"
                 , "--"
                           , "-o"	, "<fn=1>󱟞</fn> <left>%"
                           , "-O"	, "<fn=1><fc=#dAA520>󰂄</fc></fn> <left>%"
                 ] 10
               , Run Cpu
                   [ "-L", "3"
                   , "-H", "50"
                   , "--high"  , "#cc241d"
                   , "--template", " <total>%"
                   ] 10
               , Run Memory ["-t", "<fn=1>󰍛</fn> <usedratio>%"] 10
               , Run Swap ["-t", "<fn=1>󰾴</fn> <usedratio>%"] 10
               , Run Date "󱑂 %H:%M  %a %d-%m-%Y" "date" 10
               , Run DiskU
                   [("/", "<fn=1>󰑹</fn> <used>")]
                   []
                   20
               , Run XMonadLog
               ]
  , sepChar  = "%"
  , alignSep = "}{"
  , template = " %wlp3s0wi% %ip% %wlp3s0% }<fc=#abb2bf>%XMonadLog%</fc>{ %disku% * %cpu% * %memory% -<< %date% "
  }

